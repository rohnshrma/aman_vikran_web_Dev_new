<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>To Do List</title>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">

    <!-- Font Awesome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.1/css/all.min.css"
    />

    <!-- custom css -->
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <div class="app-container">
      <header class="header glass-panel">
        <h1>TO DO LIST</h1>
        <nav class="btn-group">
          <a href="/" class="nav-btn nav-btn-all">Show All</a>
          <a href="/pending" class="nav-btn nav-btn-pending">Pending</a>
          <a href="/completed" class="nav-btn nav-btn-completed">Completed</a>
        </nav>
      </header>

      <main>
        <!-- Form Area -->
        <section class="form-area glass-panel" style="margin-bottom: 1.5rem;">
          <form action="/" method="post">
            <div class="input-group">
              <label>What needs to be done?</label>
              <input
                type="text"
                name="title"
                minlength="3"
                required
                placeholder="Buy grosseries, Send email..."
                class="form-control"
              />
            </div>
            <div class="input-group">
              <label>Status</label>
              <select name="status" class="form-control">
                <option value="pending" selected>Pending</option>
                <option value="completed">Completed</option>
              </select>
            </div>
            <button type="submit" class="btn-primary">Add Task</button>
          </form>
        </section>

        <!-- Task Area -->
        <section class="task-area glass-panel">
          <div style="padding: 0 1rem 1.5rem; border-bottom: 1px solid var(--glass-border); margin-bottom: 0.5rem;">
            <h2 style="font-size: 1.1rem; color: var(--text-secondary); text-transform: uppercase; letter-spacing: 0.1em;">Your Tasks</h2>
          </div>
          <% if(items.length > 0){ %>
          <ul class="task-list">
            <% items.forEach(item=>{ %>
            <li class="task-item">
              <div class="task-content">
                <span class="task-title"><%= item.title %></span>
                <span class="status-badge <%= item.status === "completed" ? "badge-completed" : "badge-pending"  %>">
                  <%=  item.status %>
                </span>
              </div>
              <div class="task-actions">
                <a href="/edit/<%= item._id %>" class="action-btn btn-edit" title="Edit Task">
                  <i class="fa-solid fa-pencil"></i>
                </a>
                <a href="/delete/<%= item._id %>" class="action-btn btn-delete" title="Delete Task">
                  <i class="fa-solid fa-trash"></i>
                </a>
              </div>
            </li>
            <% }) %>
          </ul>
          <% } else { %>
          <div style="text-align: center; color: var(--text-secondary); padding: 4rem 2rem;">
            <i class="fa-solid fa-clipboard-check" style="font-size: 4rem; margin-bottom: 1.5rem; opacity: 0.3;"></i>
            <h3 style="font-weight: 500;">All caught up!</h3>
            <p style="opacity: 0.7;">No tasks found in this category.</p>
          </div>
          <% } %>
        </section>
      </main>
    </div>
  </body>
</html>
