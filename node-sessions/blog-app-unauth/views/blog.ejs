<%- include('partials/header', { title: blog.title + ' - Blog App' }) %>

<main>
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <article class="card shadow-sm">
                <div class="card-body">
                    <h1 class="card-title display-4 mb-3"><%= blog.title %></h1>
                    
                    <p class="text-muted mb-4">
                        <i class="far fa-calendar mr-1"></i>
                        Created: <%= new Date(blog.createdAt).toLocaleDateString() %>
                        <% if (blog.updatedAt && blog.updatedAt.getTime() !== blog.createdAt.getTime()) { %>
                            <br>
                            <i class="far fa-edit mr-1"></i>
                            Updated: <%= new Date(blog.updatedAt).toLocaleDateString() %>
                        <% } %>
                    </p>
                    
                    <div class="card-text blog-content">
                        <%= blog.content.replace(/\n/g, '<br>') %>
                    </div>
                </div>
                
                <div class="card-footer bg-transparent">
                    <div class="d-flex">
                        <a href="/edit/<%= blog._id %>" class="btn btn-warning mr-2">
                            <i class="fas fa-edit mr-1"></i>Edit
                        </a>
                        <form action="/blog/<%= blog._id %>?_method=DELETE" method="POST" class="d-inline mr-2">
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this blog?')">
                                <i class="fas fa-trash mr-1"></i>Delete
                            </button>
                        </form>
                        <a href="/home" class="btn btn-secondary ml-auto">
                            <i class="fas fa-arrow-left mr-1"></i>Back to Home
                        </a>
                    </div>
                </div>
            </article>
        </div>
    </div>
</div>
</main>

<%- include('partials/footer') %>
