<%- include('partials/header', { title: 'Home - Blog App' }) %>

<main>
<div class="container my-5">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-body">
                    <h1 class="display-4 mb-0">All Blog Posts</h1>
                </div>
            </div>
            
            <% if (blogs && blogs.length > 0) { %>
                <div class="row">
                    <% blogs.forEach(blog => { %>
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="card h-100 shadow-sm">
                                <div class="card-body">
                                    <h5 class="card-title"><%= blog.title %></h5>
                                    <p class="card-text">
                                        <%= blog.content.length > 100 ? blog.content.substring(0, 100) + '...' : blog.content %>
                                    </p>
                                    <p class="text-muted small">
                                        <i class="far fa-calendar mr-1"></i>
                                        <%= new Date(blog.createdAt).toLocaleDateString() %>
                                    </p>
                                </div>
                                <div class="card-footer bg-transparent">
                                    <a href="/blog/<%= blog._id %>" class="btn btn-primary btn-sm mr-2">
                                        <i class="fas fa-eye mr-1"></i>Read More
                                    </a>
                                    <a href="/edit/<%= blog._id %>" class="btn btn-warning btn-sm mr-2">
                                        <i class="fas fa-edit mr-1"></i>Edit
                                    </a>
                                    <form action="/blog/<%= blog._id %>?_method=DELETE" method="POST" class="d-inline">
                                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this blog?')">
                                            <i class="fas fa-trash mr-1"></i>Delete
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            <% } else { %>
                <div class="alert alert-info">
                    <i class="fas fa-info-circle mr-2"></i>No blog posts yet. <a href="/compose">Create your first post!</a>
                </div>
            <% } %>
        </div>
    </div>
</div>
</main>

<%- include('partials/footer') %>
