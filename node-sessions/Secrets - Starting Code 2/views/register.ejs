<%- include('partials/header') %> <!-- Shared header with CSS/JS imports -->

<div class="container mt-5">
  <h1>Register</h1>

  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">
          <!-- Registration form -->
          <!-- Submits POST /auth/register which calls REGISTER_USER in the controller -->
          <form action="/auth/register" method="POST">
            <div class="form-group">
              <label for="email">Email</label>
              <!-- "username" is used here to match Passport's LocalStrategy field name -->
              <input type="email" class="form-control" name="username" />
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <!-- Plain text here; will be hashed with bcrypt on the server -->
              <input type="password" class="form-control" name="password" />
            </div>
            <button type="submit" class="btn btn-dark">Register</button>
          </form>
        </div>
      </div>
    </div>

    <!-- Optional area for social sign-up -->
    <div class="col-sm-4">
      <div class="card social-block">
        <div class="card-body">
          <a class="btn btn-block" href="/auth/google" role="button">
            <i class="fab fa-google"></i>
            Sign Up with Google
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %> <!-- Shared footer / closing tags -->
