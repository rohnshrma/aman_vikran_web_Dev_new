<%- include('partials/header') %> <!-- Shared header / navbar -->

<!-- Protected Secrets page -->
<!-- Only logged-in users should be able to see this (via protect middleware) -->
<div class="jumbotron text-center">
  <div class="container">
    <!-- Big icon for visual style -->
    <i class="fas fa-key fa-6x"></i>
    <!-- Main message -->
    <h1 class="display-3">You've Discovered My Secret!</h1>
    <!-- Example secret text (static for now) -->
    <p class="secret-text">Jack Bauer is my hero.</p>
    <hr>
    
    <!-- Log the user out and destroy the session -->
    <a class="btn btn-light btn-lg" href="/logout" role="button">Log Out</a>
    <!-- Navigate to the secret submission page (also protected) -->
    <a class="btn btn-dark btn-lg" href="/submit" role="button">Submit a Secret</a>
  </div>
</div>

<%- include('partials/footer') %> <!-- Shared footer / scripts -->
